{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@CS/web/*": ["packages/web/*"],
        "@CS/server/*": ["packages/server/src/*"],
        "@CS/config": ["config"],
      }
    },
    "include": ["packages", "config.ts"],
    "exclude": ["node_modules", "**/node_modules", "./dist"]
  }
  